        }
        .liste-rendu{
            display: flex;
            flex-direction: column;
            gap: 25px;
            height: 70%;
            overflow: auto;
        }
        .jour ul .container-rendu, .avenir ul .container-rendu{
            display: flex;
            justify-content: space-between;
        }
        .jour ul .container-rendu .gauche, .avenir ul .container-rendu .gauche{
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        .notif-modif{
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }
        .notif-modif button{
            background-color: transparent;
            border-radius: 0px;
        }
        .info-rendu{
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }
        .info-rendu .items{
